{
  "name": "private-swap-relayer",
  "version": "1.0.0",
  "description": "Relayer service for private swap execution",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:zk": "cd ../zk-coprocessor/guest && cargo build --release && cd ../host && cargo build --release",
    "build:all": "npm run build:zk && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node index.ts",
    "test": "jest",
    "test:zk": "cd ../zk-coprocessor/host && INPUT_AMOUNT=1000000 OUTPUT_AMOUNT=50000000 cargo run --release"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.87.0",
    "@types/node": "^18.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0"
  }
} 